<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/vocab_row"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:paddingTop="10dp"
        >

        <LinearLayout
            android:id="@+id/vocab_instance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="korean"
                android:id="@+id/vocab_korean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_margin="10dp" />

            <TextView
                android:layout_toRightOf="@+id/vocab_english"
                android:text="english"
                android:id="@+id/vocab_english"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_margin="10dp" />
        </LinearLayout>

        <TextView
            android:layout_below="@+id/vocab_instance"
            android:text="description"
            android:id="@+id/vocab_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>



    </RelativeLayout>
</LinearLayout>
<resources>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkTheme</item>
        <item name="colorPrimaryDark">@color/darkTheme</item>
        <item name="colorAccent">@color/darkThemeHighlight</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="noWhitePreview">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme2">
        <item name="android:windowBackground">@color/darkTheme</item>
    </style>

</resources>
